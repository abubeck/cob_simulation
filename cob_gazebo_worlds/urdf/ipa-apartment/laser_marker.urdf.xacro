  <joint name="joint_marker2" type="fixed">
    <origin xyz="${-size_total_x/2+dist_axis_x+wall_depth+0.7} ${size_total_y/4+0.755-dist_axis_y} 0.2" rpy="0 0 0" />
    <parent link="dummy_link" />
    <child link="marker2" />
